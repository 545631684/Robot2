.container {
  width: 100%;
  background: linear-gradient(-90deg, rgba(238, 238, 238, 1) 0%, rgba(255, 255, 255, 1) 100%, rgba(249, 249, 249, 1) 100%);
  height: 100vh;
  padding-top: 50rpx;
}

.container .module {
  width: 710rpx;
  background: #fff;
  box-shadow: 0px 2px 9px 0px rgba(63, 63, 63, 0.1);
  border-radius: 17rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding: 0 44rpx;
  box-sizing: border-box;
  margin: 0rpx auto;
}

.container .module_1 {
  height: 282rpx;
}

.container .module_1 input {
  width: 622rpx;
  height: 81rpx;
  background: #f2f2f2;
  border-radius: 6rpx;
  font-size: 30rpx;
  line-height: 81rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
}

.container .module text:nth-child(1) {
  font-size: 38rpx;
  font-weight: bold;
  color: #000;
}

.container .module_1 text:nth-child(3) {
  font-size: 24rpx;
  font-weight: 500;
  color: #a0a0a0;
}

.container .module_2 {
  height: 636rpx;
  margin-top: 33rpx;
}

.container .module_2 textarea {
  width: 622rpx;
  height: 451rpx;
  background: rgba(242, 242, 242, 1);
  border-radius: 15rpx;
  margin-top: -50rpx;
  padding: 35rpx;
  box-sizing: border-box;
}

.container .button {
  width: 627rpx;
  height: 108rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 4rpx 7rpx 2rpx rgba(53, 53, 53, 0.1);
  border-radius: 27rpx;
  margin: 44rpx auto;
  text-align: center;
  line-height: 108rpx;
  font-size: 60rpx;
  font-weight: 500;
  color: #096eff;
}
