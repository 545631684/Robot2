@import "../../../nmy/1.wxss";

.sjinfonav {
    position: fixed;
    width: 100%;
    height: 7vh;
    top: 0;
    z-index: 1000;
}

.downpng {
    right: 0;
    top: 0;
    position: absolute;
    width: 100rpx;
    height: 7vh;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    z-index: 1;
    background: #fff;
    border-bottom: 1rpx solid #efeff4;
}

.downpng image {
    width: 40rpx;
    height: 40rpx;
}

.sortimg {
    margin-left: 10rpx;
    transition: all 500ms;
}

.sortimg1 {
    margin-left: 20rpx;
    margin-top: 10rpx;
    transform: rotate(-180deg);
    transition: all 500ms;
}

.downpng1 {
    right: 0;
    bottom: 0;
    position: absolute;
    width: 100rpx;
    height: 7vh;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    z-index: 1;
}

.downpng1 image {
    width: 40rpx;
    height: 40rpx;
}

.nav-two {
    background: #fff;
    width: 100%;
    white-space: nowrap;
    float: left;
    height: 7vh;
    border-bottom: 1rpx solid #efeff4;
}

.toatal_head {
    width: 25%;
    text-align: center;
    display: inline-block;
    height: 7vh;
    line-height: 7vh;
    font-size: 28rpx;
    position: relative;
}

.toatal_text {
    width: 100%;
    height: 8rpx;
    z-index: 1;
    position: absolute;
    bottom: 0rpx;
    background-color: #34AAFF;
}

.default {
    color: #999;
}

.selsect {
    color: #ed414a;
    font-weight: bold;
}

.qgmain {
    margin-top: 20rpx;
}

.qgcell {
    background: #fff;
    padding: 30rpx 20rpx;
    color: #FF7861;
    border-bottom: 1rpx solid #efeff4;
}

.qgleft {
    position: relative;
}

.discount {
    position: absolute;
    background: #FF4324;
    color: #fff;
    padding: 2rpx 10rpx;
    top: 2rpx;
    left: 10rpx;
    border-bottom: 5rpx dashed #fff;
}

.qgleft image {
    width: 220rpx;
    height: 220rpx;
    border-radius: 10rpx;
}

.qgright>view {
    height: 50rpx;
}

.qgright {
    padding: 0 20rpx;
}

.name {
    color: #000;
    font-size: 12pt;
    font-weight: bold;
}

.address {
    color: #999;
}

.xlfs {
    font-size: 9pt;
    border: 1rpx solid #FF7861;
    border-radius: 10rpx;
    padding: 0rpx 10rpx;
}

.money {
    color: #E80000;
    font-size: 13pt;
    font-weight: bold;
}

.money text {
    font-size: 9pt;
    color: #999;
    font-weight: normal;
    margin-left: 10rpx;
    text-decoration: line-through;
}

.msq {
    background: #FF4324;
    color: #fff;
    padding: 5rpx 20rpx;
    border-radius: 10rpx;
}

.navbarlist {
    background: #fff;
    padding: 20rpx 30rpx 20rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    flex-wrap: wrap;
}

.navbaritem {
    color: #fff;
    background: #34AAFF;
    padding: 5rpx 10rpx;
    border-radius: 10rpx;
    margin-right: 30rpx;
    margin-bottom: 20rpx;
}

.mask {
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    position: fixed;
    z-index: 999;
    background-color: rgba(15,15,26,0.7);
    transform: translateY(-100%);
    transition: background 500ms;
}

.mask .maskbody {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    transform: translateY(-100%);
    transition: transform 500ms;
}

.mask.maskactive {
    transform: translateY(0);
}

.mask.maskactive .maskbody {
    transform: translateY(0);
}

.bfb {
    width: 60%;
    height: 35rpx;
    position: relative;
}

.qgtext {
    position: absolute;
    font-size: 25rpx;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
    color: #fff;
    z-index: 3;
}

.qgbfb1 {
    width: 100%;
    border-radius: 25rpx;
    height: 100%;
    position: absolute;
    border: 1rpx solid #34AAFF;
    box-sizing: border-box;
    z-index: 1;
    background: #000;
    opacity: 0.2;
}

.qgbfb2 {
    position: absolute;
    height: 100%;
    border-radius: 25rpx;
    color: #fff;
    font-size: 9pt;
    text-align: center;
    box-sizing: border-box;
    border: 1rpx solid #34AAFF;
    z-index: 2;
}

