.ewm {
    padding: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 30rpx;
    background: #fff;
    margin-top: 30rpx;
}

.ewm image {
    margin-top: 30rpx;
    width: 60vw;
    height: 60vw;
}

.container {
    width: 100%;
}

.head {
    width: 100%;
    height: 160rpx;
    background: #ED414A;
}

.head>view {
    width: 100%;
    height: 50%;
    text-align: center;
}

.head>view:nth-child(1) {
    line-height: 120rpx;
    font-size: 34rpx;
    color: #fff;
}

.head>view:nth-child(2) {
    line-height: 50rpx;
    font-size: 26rpx;
    color: #fff;
}

.address {
    width: 100%;
    height: 100rpx;
    background: #fff;
    margin: 20rpx auto 20rpx;
}

.address>view:nth-child(1) {
    width: 15%;
    height: 100%;
    float: left;
}

.address>view:nth-child(2) {
    width: 85%;
    height: 100%;
    float: left;
}

.address>view text {
    width: 100%;
    height: 50%;
    float: left;
    font-size: 26rpx;
}

.address>view image {
    width: 40rpx;
    height: 40rpx;
}

.address>view text:nth-child(1) {
    line-height: 70rpx;
    color: #333;
    font-weight: 400;
}

.address>view text:nth-child(2) {
    line-height: 40rpx;
    color: #999;
}

.info {
    width: 100%;
    height: auto;
    background: #fff;
}

.info>view:nth-child(1) {
    width: 95%;
    height: 60rpx;
    margin: 0 auto 0;
    font-size: 26rpx;
    line-height: 60rpx;
    color: #555;
    border-bottom: 1rpx solid #f7f7f7;
}

.info>view:nth-child(2) {
    width: 95%;
    height: 200rpx;
    margin: 0 auto 0;
    font-size: 26rpx;
}

.commodity>view:nth-child(1) {
    width: 25%;
    height: 100%;
    float: left;
}

.commodity>view image {
    width: 90%;
    height: 90%;
    left: 0;
    border-radius: 9rpx;
}

.commodity>view:nth-child(2) {
    width: 75%;
    height: 100%;
    float: left;
}

.commodity>view text:nth-child(1) {
    width: 100%;
    height: 60rpx;
    display: block;
    font-size: 29rpx;
    line-height: 60rpx;
    color: #333;
    font-weight: 600;
}

.commodity>view text:nth-child(2) {
    width: 100%;
    height: 40rpx;
    display: block;
    text-align: right;
    line-height: 40rpx;
    font-size: 26rpx;
    color: #333;
}

.commodity>view text:nth-child(3) {
    width: 100%;
    height: 60rpx;
    display: block;
    text-align: right;
    font-size: 26rpx;
    color: #666;
}

.money {
    width: 100%;
    height: auto;
    background: #fff;
    margin: 20rpx auto;
}

.money>view {
    width: 100%;
    height: 80rpx;
    box-sizing: border-box;
    line-height: 80rpx;
    font-size: 28rpx;
    text-indent: 20rpx;
    border-bottom: 1rpx solid #e5e5e5;
}

.money>view text:nth-child(1) {
    color: #666;
}

.money>view text:nth-child(2) {
    float: right;
    font-weight: 500;
    margin-right: 20rpx;
}

.order_time {
    width: 100%;
    height: auto;
    background: #fff;
}

.order_time>view:nth-child(1) {
    width: 95%;
    padding: 20rpx 0;
    margin: 0 auto 0;
    font-size: 24rpx;
    color: #999;
    line-height: 40rpx;
}

.order_time>view:nth-child(2) {
    width: 95%;
    height: auto;
    margin: 0 auto 0;
    font-size: 24rpx;
    color: #999;
    line-height: 40rpx;
    padding-bottom: 20rpx;
}

.label {
    width: 100%;
    height: 120rpx;
    background: #fff;
    margin-top: 20rpx;
}

.label text {
    display: block;
    width: auto;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 28rpx;
    padding: 0 25rpx;
    border: 4rpx solid #e5e5e5;
    border-radius: 30rpx;
    background: #f7f7f7;
}

.label text:nth-child(1) {
    left: 20rpx;
}

.label text:nth-child(2) {
    right: 20rpx;
}