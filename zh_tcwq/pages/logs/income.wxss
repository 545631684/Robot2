.container {
    width: 100%;
    height: 100%;
    position: fixed;
    z-index: 100;
    top: 0rpx;
    left: 0rpx;
}

.modal {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    background: #000;
    opacity: .4;
    z-index: 101;
}

.total {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    margin: auto;
    width: 90%;
    height: 300rpx;
    border-radius: 10rpx;
    background: #fff;
    z-index: 102;
    overflow: hidden;
}

.total view {
    width: 90%;
    height: 50%;
    margin: 5% auto;
    text-align: center;
    font-size: 30rpx;
    line-height: 50rpx;
    font-family: '微软雅黑';
}

.total button {
    width: 100%;
    height: 30%;
    margin-top: 5%;
    background: red;
    line-height: 90rpx;
    font-size: 28rpx;
    border-radius: 0rpx;
    background: #fff;
    border-top: 1rpx solid #e5e5e5;
    color: #41b0ff;
}

.total button::after {
    border: none;
}

page {
    width: 100%;
    height: 100%;
}

.income {
    font-size: 26rpx;
}

.income_header {
    color: white;
    padding: 20rpx 30rpx;
    background-color: #ED414A;
}

.income_flex {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.cash {
    font-size: 52rpx;
    display: flex;
    align-items: center;
}

.income_go {
    display: flex;
    align-items: center;
}

.income_go image {
    width: 15rpx;
    height: 20rpx;
    margin-left: 30rpx;
}

.refer {
    margin-top: 20rpx;
    background-color: white;
    font-size: 26rpx;
    color: #333;
    padding: 0rpx 30rpx;
}

.refer_flex {
    display: flex;
    justify-content: space-between;
    padding: 20rpx 0rpx 20rpx 0rpx;
    border-bottom: 1rpx solid #eee;
}

.refer_flex2 {
    display: flex;
    justify-content: space-between;
    padding: 20rpx 0rpx 20rpx 0rpx;
}

.refer_content {
    color: #333;
}

.refer_right {
    display: flex;
    align-items: center;
}

.refer_logo {
    width: 130rpx;
    height: 130rpx;
    background-color: pink;
    border-radius: 15rpx;
}

.right_img {
    width: 20rpx;
    height: 30rpx;
    margin-left: 30rpx;
}