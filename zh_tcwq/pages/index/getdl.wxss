.head {
    height: 350rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.head image {
    width: 120rpx;
    height: 120rpx;
    z-index: 999;
}

.hydlqueren {
    height: 80rpx;
    width: 80%;
    font-size: 30rpx;
    line-height: 80rpx;
    text-align: center;
    color: white;
    background: #09BB07;
    border-radius: 10rpx;
    margin-top: 100rpx;
}

.sq_screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000;
    background: #000;
    opacity: 0.7;
    overflow: hidden;
}

.sq_box {
    width: 80vw;
    overflow: hidden;
    position: fixed;
    top: 20%;
    left: 0;
    z-index: 1001;
    background: #FAFAFA;
    margin: 0 10vw 0 10vw;
    border-radius: 30rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.sq_box image {
    margin: 40rpx 0 40rpx 40rpx;
    width: 430rpx;
    height: 364rpx;
}

.sq_title {
    padding: 40rpx;
    font: 30rpx "microsoft yahei";
    font-weight: bold;
    text-align: center;
    color: #333;
}

.sq_title1 {
    padding: 0 20rpx;
    font: 27rpx "microsoft yahei";
    text-align: center;
    color: #666;
}

.sq_content {
    height: 210px;
    overflow-y: scroll;
}

.btn_ok {
    padding: 25rpx;
    font: 30rpx "microsoft yahei";
    text-align: center;
    margin: 5rpx 0 40rpx;
    background: #f44444;
    width: 55vw;
    border-radius: 50rpx;
    color: #fff;
}