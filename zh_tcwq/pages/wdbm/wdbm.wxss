.none {
    position: fixed;
    width: 192rpx;
    height: 255rpx;
    overflow: hidden;
}

.none image {
    width: 100%;
    height: 100%;
}

.bmlist {
    background: #fff;
    padding: 20rpx;
    display: flex;
    flex-direction: row;
    font-size: 30rpx;
    margin: 20rpx 0;
}

.bmimg {
    width: 180rpx;
    height: 120rpx;
    margin-right: 20rpx;
}

.bmimg image {
    min-width: 180rpx;
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
}

.bminfo {
    font-size: 28rpx;
    flex: 1;
}

.bminfo .gobyndsingle {
    width: 500rpx;
}

.hddz {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.hddz .gobyndsingle {
    width: 450rpx;
}

.hddz image {
    width: 30rpx;
    height: 30rpx;
    margin-right: 20rpx;
}

.hdzt {
    border-radius: 5rpx;
    width: 100rpx;
    text-align: center;
    padding: 5rpx 10rpx;
    color: #fff;
